<!DOCTYPE html>
<html>

<head>
    <meta charset='utf-8'>
    <meta http-equiv='X-UA-Compatible' content='IE=edge'>
    <title>Admin login</title>
    <meta name='viewport' content='width=device-width, initial-scale=1'>

    {{!--
    <script src='main.js'></script> --}}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel='stylesheet' type='text/css' media='screen' href='/css/style.css'>

    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.slim.min.js"></script>
</head>

<body>

    <form method="post" action="/admin_home/login" class="was-validated">
        <section class="vh-100">
            {{!-- style="background-color: #508bfc;" --}}
            <div class="container py-5 h-100">
                <div class="row d-flex justify-content-center align-items-center h-100">
                    <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                        <div class="card shadow-2-strong shadow-lg p-3 mb-5 bg-body rounded"
                            style="border-radius: 2rem;">
                            <div class="card-body p-5 text-center">

                                <h3 class="mb-5">Admin Login</h3>

                                <div class="form-outline mb-4">
                                    <label class="form-label" for="typeEmailX-2">Email</label>
                                    <input type="text" id="typeEmailX-2" name="email"
                                        pattern="[A-Za-z0-9._%+-]+@[A-Za-z0-9.-]+\.[A-Za-z]{1,63}$" required
                                        class="form-control form-control-lg" />
                                </div>

                                <div class="form-outline mb-4">
                                    <label class="form-label" for="typePasswordX-2">Password</label>
                                    <input type="password" id="typePasswordX-2" name="password"
                                        class="form-control form-control-lg" required />
                                </div>

                                <!-- Checkbox -->
                                {{!-- <div class="form-check d-flex justify-content-start mb-4">
                                    <input class="form-check-input" type="checkbox" value="" id="form1Example3" />
                                    <label class="form-check-label" for="form1Example3"> Remember password </label>
                                </div> --}}



                                <button class="btn btn-primary btn-lg btn-block mb-2" type="submit">Login</button>
                                <a href="/admin/signup"> <button class="btn btn-success btn-lg btn-block mb-2"
                                        type="button" draggable="true">Signup</button></a>
                                <br>
                                <a href="/admin/forgot"> forgot password ? </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </form>
</body>

</html>